<view class="container">
  <view class="form">
    <view class="date-display">{{displayDate}}</view>
    
    <view class="count-display">
      <view class="count-item">
        <text class="emoji">🍦</text>
        <text class="count">×{{tempConeCount}}</text>
      </view>
      <view class="count-item">
        <text class="emoji">🍨</text>
        <text class="count">×{{tempCupCount}}</text>
      </view>
    </view>

    <view class="button-group">
      <view class="button add" bindtap="addCone">
        <text class="button-icon">🍦</text>
        <text class="button-text">添加甜筒</text>
      </view>
      <view class="button minus small" bindtap="minusCone">
        <text class="button-icon">-</text>
      </view>
      <view class="button minus small" bindtap="minusCup">
        <text class="button-icon">-</text>
      </view>
      <view class="button add" bindtap="addCup">
        <text class="button-icon">🍨</text>
        <text class="button-text">添加杯装</text>
      </view>
    </view>

    <view class="bottom-buttons">
      <view class="button reset" bindtap="resetCount">
        <text class="button-icon">↺</text>
        <text class="button-text">重置</text>
      </view>
      <view class="button confirm" bindtap="confirmChanges">
        <text class="button-icon">✓</text>
        <text class="button-text">确定</text>
      </view>
    </view>
  </view>
</view> 